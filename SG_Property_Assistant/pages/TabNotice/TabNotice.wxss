page {
  background: #f5f5f5;
}

.notice {
  border-bottom: 1px solid #e5e5e5;
  padding-bottom: 30rpx;
  padding-top: 30rpx;
}
.notice:last-child{ border-bottom: none;}

.notice .img {
  width: 120rpx;
  margin-right: 20rpx;
}

.notice .img image{
  width: 90rpx;
  height: 90rpx;
}

.notice_title {
  font-size: 17px;
  font-weight: 700;
}

.notice_butt {
  height: 24px;
  padding-left: 10px;
  padding-right: 10px;
  text-align: center;
  line-height: 24px;
  font-size: 12px;
  border-radius: 10rpx;
  margin-left: 8px;
}

.not_top {
  vertical-align: middle;
  padding-bottom: 10rpx;
}

.butt_already {
  border: 1px solid #e5e5e5;
  color: #999;
}

.not_describe {
  font-size: 14px;
  color: #999;
}

.notice_lists {
  padding-left: 30rpx;
  background: #fff;
}

.notice_conet{
  padding-right: 20rpx;
}

.not_immediate{
  background: #008489;
  color: #fff;
}

.not_accepted{
  background: #333;
  color: #fff;
}