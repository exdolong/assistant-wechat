.mod_box {
  width: 100%;
  height: 100%;
  z-index: 99;
  overflow: hidden;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
}
.filter_box {
  background-color: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.tab_bar {
  display: flex;
  background: #fff;
  flex-direction: row;
  justify-content: space-between;
  padding-left: 20px;
  padding-right: 20px;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1px solid #eee;
}

.tab_tit {
  display: flex;
  flex-direction: row;
  font-size: 15px;
  vertical-align: middle;
}

.tab_tit text {
  color: #666;
  margin-right: 15rpx;
}

.icon_triangle_down {
  width: 12px;
  height: 6.4px;
  margin-top: 41rpx;
}

.result_list {
  background: #fff;
  padding-left: 15px;
}

.sort_bar {
  position: fixed;
  right: 0.9375rem;
  bottom: 2.25rem;
  width: 2.5rem;
  height: 2.5rem;
  line-height: 0;
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 0.625rem;
  text-align: center;
  border-radius: 2.5rem;
  z-index: 10;
}

.icon_sort {
  width: 15px;
  height: 15px;
  display: block;
  margin-left: 30rpx;
  margin-top: 12rpx;
}

.sort_bar text {
  color: #fff;
  display: block;
  padding-top: 20rpx;
  font-size: 12px;
}

.screen_content {
  width: 100%;
  height: auto;
  background-color: rgba(255, 255, 255, 1);
  z-index: 99;
  overflow: hidden;
  font-size: 16px;
}


.screen_content .filter_item {
  /* transition: transform 0.5s ease;
  transform: translate3d(0, -100%, 0); */
  display: flex;
  flex-direction: row;
  /* opacity: 0; */
}

.area_list {
  width: 50%;
  background: #f0f0f0;
  display: flex;
  overflow-y: scroll;
  flex-direction: column;
  border-right: 1px solid #eee;
}

.area_list text {
  height: 86rpx;
  line-height: 86rpx;
  padding-left: 20px;
}

.area_list text.active {
  background: #fff;
}

.screen_content .filter_item .active {
  display: flex;
  opacity: 1;
  z-index: 2;
}

.guide {
  display: flex;
  width: 45%;
  flex-direction: column;
  background: #fff;
  padding-left: 5%;
  height: 300px;
  overflow-y: scroll;
}

.guide text, .price text.list {
  height: 86rpx;
  line-height: 86rpx;
  border-bottom: 1px solid #e5e5e5;
}
.guide text:last-child ,.price text.list:last-child{ border-bottom: none;}

.tab_bar .tab_tit text.active {
  color: #ff5a5f;
  font-weight: bold;
}

.price {
  width: 100%;
}

.price_other {
  height: 34px;
  padding-top: 10px;
  padding-left: 30rpx;
  border-top: 1px solid #e5e5e5;
}

.price_other input {
  width: 100rpx;
  height: 24px;
  line-height: 24px;
  background: #e8e8e9;
  border-radius: 6rpx;
  text-align: center;
  font-size: 12px;
  color: #999;
  margin-right: 20rpx;
}

.price_other text.button {
  width: 100rpx;
  height: 26px;
  line-height: 26px;
  color: #fff;
  background: #ff5a5f;
  font-size: 12px;
  border: none;
  border-radius: 6rpx;
  text-align: center;
  font-weight: normal;
  margin-left: 20rpx;
}

.price .flex_col {
  overflow-y: scroll;
  margin-left: 30rpx;
}

.apartment_button, .empty_button {
  width: 750rpx;
  display: inline-block;
  height: 108rpx;
  background: #ff5a5f;
  color: #fff;
  text-align: center;
  line-height: 108rpx;
  font-size: 17px;
}

.dl_item {
  padding: 30rpx;
  padding-bottom: 0rpx;
  border-bottom: 1px solid #e5e5e5;
}
.dl_item:last-child{ border-bottom: none;}
.empty_button {
  background: #fff;
  color: #666;
  border-top: 1px solid #eee;
}

.dl_title {
  font-size: 15px;
  font-weight: bold;
  display: inline-block;
  height: 80rpx;
}

.dl_content text {
  height: 28px;
  line-height: 28px;
  padding-left: 30rpx;
  padding-right: 30rpx;
  border: 1px solid #e4e6f0;
  border-radius: 5rpx;
  margin-right: 30rpx;
  color: #999;
  font-size: 14px;
  display: inline-block;
  margin-bottom: 30rpx;
}

.dl_content text.active {
  color: #ff5a5f;
  border: 1px solid #ff5a5f;
}

.scroll_max_height {
  max-height: 790rpx;
}

.result_list .pictext:last-child{ border-bottom: none;}
.page-body ,.page-body map{ width: 750rpx; height: 1244rpx;}