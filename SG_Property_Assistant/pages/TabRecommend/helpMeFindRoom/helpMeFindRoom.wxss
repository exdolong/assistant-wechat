/* pages/TabRecommend/helpMeFindRoom/helpMeFindRoom.wxss */

.buy_house {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  padding-top: 30rpx;
}

.buy_house text {
  width: 30%;
  display: block;
  text-align: center;
  color: #999;
  font-size: 34rpx;
  font-weight: 500;
}

.buy_house text.selection {
  color: #333;
}

.scroll_max_height {
  height: auto;
  padding-bottom: 30rpx;
}

.dl_item {
  padding: 30rpx;
  padding-bottom: 0rpx;
  margin-top: 20rpx;
}

.dl_item:last-child {
  border-bottom: none;
}

.dl_title {
  font-size: 34rpx;
  font-weight: bold;
  display: inline-block;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.dl_content text {
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  border: 1px solid #e4e6f0;
  background: #f5f5f5;
  border-radius: 5rpx;
  margin-right: 48rpx;
  color: #666;
  font-size: 26rpx;
  display: inline-block;
  margin-bottom: 30rpx;
}

.dl_content text:last-child {
  margin-right: 0rpx;
}

.dl_content text.active {
  color: #a45c24;
  border: 1px solid #a45c24;
}

.input_faz {
  font-size: 34rpx;
}

.submission {
  background: linear-gradient(to right, rgba(81, 81, 81, 1), rgba(49, 48, 47, 1));
  border: none;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 80rpx;
  color: #e7c690;
}

.smsCode {
  height: 120rpx;
  border-bottom: 1px solid #e4e6f0;
}

.region {
  height: 100rpx;
  background: #f2f2f2;
  border-radius: 10rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}

.dingwei_icon {
  width: 24rpx;
  height: 34rpx;
  margin-top: 33rpx;
}

.triangle_down {
  width: 28rpx;
  height: 16rpx;
  margin-top: 42rpx;
}

.region text {
  border: none;
  background: no-repeat;
  font-size: 34rpx;
  width: 70%;
  line-height: 100rpx;
}

.dl_content text.range_nbmer{
  font-size: 40rpx;
  color: #A45C24;
  border: none;
  background: #fff;
  text-align: center;
  display: block;
  font-weight: 500;
}