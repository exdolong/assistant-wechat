/* pages/TabRecommend/layoutHouseList/layoutHouseListPage.wxss */
page{
  padding: 30rpx;
}
.apartment_item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 60rpx;
  margin-bottom: 20rpx;
}

.image_box {
  width: 200rpx;
  height: 200rpx;
  overflow: hidden;
}

.image_left {
  width: 100%;
  height: 100%;
}

.text_sqm {
  width: calc(100% - 230rpx);
}

.sq_ft {
  display: block;
  font-size: 30rpx;
  color: #999;
  padding-top: 6rpx;
  padding-bottom: 6rpx;
}

.price {
  display: block;
  font-size: 28rpx;
  color: #ff5a5f;
}

.tag_cyan {
  color: #a45c26;
  background: #f4e5c1;
  padding:10rpx;
  font-weight: normal;
  font-size: 30rpx;
}

.no_data{
  text-align: center;
  padding-top: 260rpx;
}

.no_data image{
  width: 300rpx;
  height: 260rpx;
}

.no_text{
  font-size: 30rpx;
  color: #333;
  text-align: center;
  display: block;
}